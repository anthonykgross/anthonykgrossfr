{% extends 'base.html.twig' %}

{% block title %}
{% apply spaceless %}
    {% if entity.metaTitle %}
        {{ entity.metaTitle }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endapply %}
{% endblock %}

{% block description %}
{% apply spaceless %}
    {% if entity.metaDescription %}
        {{ entity.metaDescription }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endapply %}
{% endblock %}

{% block keywords %}
{% apply spaceless %}
    {% if entity.metaKeywords %}
        {{ entity.metaKeywords }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endapply %}
{% endblock %}

{% block og_url %}
{% apply spaceless %}
    {% if entity.url %}
        http://{{ app.request.host ~'/'~ entity.url }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endapply %}
{% endblock %}

{% block og_image %}
{% apply spaceless %}
    {% if entity.thumbnail %}
        /{{ entity.thumbnail }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endapply %}
{% endblock %}

{% block draft_mode %}
    {% if not entity.isOnline %}
        enabled
    {% endif %}
{% endblock %}

{% block body %}
    {{ entity.content|raw }}
{% endblock %}

{% block extraCSS %}
    {{ entity.extraCSS|raw }}
{% endblock %}

{% block javascripts %}
    {{ entity.extraJS|raw }}
{% endblock %}